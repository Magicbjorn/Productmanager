{% extends 'PCBuildMainBundle:Base:_layout.html.twig' %}

{% block bodycontent %}
<h1 class="title-align-horizontal">
    Build Details
</h1>
<a class="btn btn-primary btn-primary-modified btn-margin" href="{{ path('build_index') }}" style="position: fixed;">
    < Back to the list
</a>
<div class="row">
    <table>
        <tbody>
            <tr>
                <th>
                    Title
                </th>
                <td>
                    {{ build.title }}
                </td>
            </tr>
            <tr>
                <th>
                    Price
                </th>
                <td>
                    {{ build.totalprice }}
                </td>
            </tr>
            <tr>
                <th>
                    Description
                </th>
                <td>
                    {{ build.description }}
                </td>
            </tr>
            <tr>
                <th>
                    Last Updated At
                </th>
                <td>
                    {{ build.updated_at|date('d-m-Y H:i:s') }}
                </td>
            </tr>
            <tr>
                <th>
                    Last Updated By
                </th>
                <td>
                    {{ build.updated_by }}
                </td>
            </tr>
            <tr>
                <th>
                    Components
                </th>
                <td>
                    {% for component in build.components %}
                        {{ component.title }}<br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td>
                    <a class="btn btn-primary btn-primary-modified btn-margin" href="{{ path('build_edit', { 'id': build.id }) }}">
                        Edit
                    </a>
                </td>
                <td>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger btn-danger-modified btn-margin" type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </input>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
